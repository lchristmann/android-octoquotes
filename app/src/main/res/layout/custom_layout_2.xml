<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/custom2frameLayout"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_weight="9"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/purpleRingImageView"
            android:layout_width="52dp"
            android:layout_height="60dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/ring_around_quote_image_view_in_custom_layout_2"
            android:cropToPadding="true"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:scaleType="fitStart" />

        <TextView
            android:id="@+id/quoteIndexNumberTextView"
            android:layout_width="52dp"
            android:layout_height="60dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:cropToPadding="true"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="@color/foregroundColor"
            android:textSize="20sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/quoteTextViewInCustomLayout2"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="0dp"
        android:layout_weight="2"
        android:maxLines="3"
        android:ellipsize="end"
        android:gravity="center_vertical|start"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/foregroundColor"
        android:textSize="16sp" />

</LinearLayout>