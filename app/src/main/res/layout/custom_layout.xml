<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="68dp"
    android:paddingTop="4dp">

    <ImageView
        android:id="@+id/mainCategoryIconImageView"
        android:layout_width="24dp"
        android:layout_height="60dp"
        android:layout_gravity="clip_vertical"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="@string/category_icon_image_view_in_custom_layout"
        android:cropToPadding="true"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:scaleType="fitStart" />

    <TextView
        android:id="@+id/mainCategoryNameTextView"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="clip_vertical|start"
        android:layout_weight="3"
        android:fontFamily="sans-serif"
        android:foregroundGravity="left"
        android:gravity="center_vertical|start"
        android:paddingStart="24dp"
        android:textColor="@color/foregroundColor"
        android:textSize="24sp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/mainCategorySizeTextView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:layout_marginEnd="24dp"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:textColor="@color/mainPurple"
        tools:ignore="RtlHardcoded" />

</LinearLayout>