<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leanderchristmann.octoquotes">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="true"
        android:allowBackup="true">
        <activity android:name=".ui.SearchQuoteActivity" />
        <activity android:name=".ui.SearchActivity" />
        <activity android:name=".ui.RandomQuoteActivity" />
        <activity android:name=".ui.FavoritesQuoteActivity" />
        <activity android:name=".ui.FavoritesActivity" />
        <activity android:name=".ui.SettingsActivity" />
        <activity android:name=".ui.FeedbackActivity" />
        <activity android:name=".ui.SuggestionActivity" />
        <activity android:name=".ui.QuoteActivity" />
        <activity android:name=".ui.CategoryActivity" />
        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/LoadingTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>